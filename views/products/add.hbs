<div class="container mt-5">
    <h2>Thêm sản phẩm</h2>
    <form action="./add" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="tenmay" class="form-label">Tên máy</label>
            <input type="text" class="form-control" id="tenmay" placeholder="" name="ten_may" required>
        </div>
        <div class="mb-3">
            <select class="form-select" aria-label="Default select example" name="hang_sx" required>
                <option value="" selected disabled hidden>Hãng sản xuất</option>
                <option value="Acer">Acer</option>
                <option value="Apple">Apple</option>
                <option value="MSI">MSI</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="anhsp" class="form-label">Ảnh sản phẩm</label>
            <input type="file" class="form-control" id="anhsp" placeholder="" name="anh_sp" required>
        </div>
        <div class="mb-3">
            <label for="giatien" class="form-label">Giá tiền</label>
            <input type="number" class="form-control" id="giatien" placeholder="" name="gia_tien" required>
        </div>
        <div class="mb-3">
            <label for="binhluan" class="form-label">Bình luận</label>
            <input type="text" class="form-control" id="binhluan" placeholder="" name="binh_luan" required>
        </div>
        <a href="/" type="submit" class="btn btn-outline-warning">Quay lại</a>
        <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    </form>
</div>